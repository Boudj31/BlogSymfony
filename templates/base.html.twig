  <body>
    <div class="container">
  <header class="blog-header py-3">
    <div class="row flex-nowrap justify-content-between align-items-center">
      <div class="col-4 pt-1">
      {% if is_granted('IS_AUTHENTICATED_FULLY') %}
        <a class="btn btn-sm btn-outline-secondary" href="{{path('app_logout')}}">Logout</a>
        <a href="{{path('profile', {'id': app.user.id})}}">
         {% if app.user %}
             <small>({{app.user.email}})</small> 
         {% endif %}
        </a>
        {% else %}
         <a class="btn btn-sm btn-outline-secondary" href="{{ path('app_login') }}">Login</a>
         <a class="btn btn-sm btn-outline-secondary" href="{{ path('app_register') }}">Sign up</a>
       {% endif %}
      </div>
   
      <div class="col-4 text-center">
         <a href="{{ path('default') }}"><img src="{{ asset('image/symfony.png') }}" alt="logo" width="200px" height="50px"></a>
      </div>
      <div class="col-4 d-flex justify-content-end align-items-center">
        <a class="btn btn-sm btn-outline-secondary" href="{{ path('categorie_index', {'_locale': 'fr'}) }}"> Categorie </a>
        <a class="btn btn-sm btn-outline-secondary" href="{{ path('article_index') }}"> News </a>
        <a class="btn btn-sm btn-outline-secondary" href="{{ path('contact') }}">Contact Us</a>
      </div>
    </div>
  </header>
